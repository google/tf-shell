{
	"name": "Bazel (Community)",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"BAZELISK_VERSION": "v1.27.0",
			"BAZELISK_DOWNLOAD_SHA": "e1508323f347ad1465a887bc5d2bfb91cffc232d11e8e997b623227c6b32fb76"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode.cpptools-extension-pack",
				"BazelBuild.vscode-bazel",
				"minherz.copyright-inserter",
				"DavidAnson.vscode-markdownlint",
				"yzhang.markdown-all-in-one",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"ms-toolsai.tensorboard"
			]
		}
	},

	"mounts": [ "source=/tmp,target=/tmp,type=bind,consistency=cached" ],
	"remoteUser": "vscode"
}
